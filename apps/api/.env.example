# ============================================
# NEON DATABASE CONFIGURATION
# ============================================
# Get these values from https://console.neon.tech
# Go to your project > Connection Details > Parameters only

NEON_HOST="ep-xxx-xxx-123456.region.aws.neon.tech"
NEON_DATABASE="neondb"
NEON_USER="neondb_owner"
NEON_PASSWORD="your-password-here"
NEON_SSL=true
NEON_POOL_SIZE=10

# DATABASE_URL is used by Prisma CLI for migrations
# Runtime uses NEON_* variables above
DATABASE_URL="postgresql://neondb_owner:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# ============================================
# Google OAuth
# ============================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-your-google-client-secret"

# ============================================
# JWT
# ============================================
JWT_SECRET="generate-a-secure-random-string-here"

# ============================================
# API Configuration
# ============================================
API_URL="http://localhost:3001"
PORT=3001
CORS_ORIGIN="http://localhost:3000"
NODE_ENV="development"
