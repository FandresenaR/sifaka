// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client-web"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(USER)
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  
  // Shuffle Life Relations
  preferences   UserPreference?
  activities    UserActivity[]
  favorites     FavoriteActivity[]
  subscription  ShuffleLifeSubscription? @relation("ShuffleLifeSub")
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User Roles
enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
  MANAGER
  CLIENT
}

// AI Configuration
model AIConfig {
  id        String   @id @default(cuid())
  provider  String   // openai, claude, openrouter
  apiKey    String
  model     String?
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider])
}

// Media
model Media {
  id          String   @id @default(cuid())
  url         String
  filename    String
  type        String
  mimeType    String
  size        Int
  width       Int?
  height      Int?
  alt         String?
  title       String?
  description String?
  tags        String[]
  projectId   String?  // Nullable pour médias partagés entre projets
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
}

// Products
model Product {
  id             String   @id @default(cuid())
  titleFr        String
  titleEn        String
  slug           String   @unique
  slugEn         String?
  descriptionFr  String   @db.Text
  descriptionEn  String   @db.Text
  price          Int
  images         String[]
  category       String
  inStock        Boolean  @default(true)
  featured       Boolean  @default(false)
  isNew          Boolean  @default(false)
  comingSoon     Boolean  @default(false)
  projectId      String
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([slug])
  @@index([category])
  @@index([projectId])
}

// Blog Posts
model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String   @db.Text
  excerpt     String?
  coverImage  String?
  published   Boolean  @default(false)
  tags        String[]
  authorId    String?
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?

  @@index([slug])
  @@index([published])
  @@index([projectId])
}

// Projects (CMS Projects)
model Project {
  id                String                      @id @default(cuid())
  name              String
  slug              String                      @unique
  type              ProjectType                 @default(CUSTOM)
  description       String?
  status            ProjectStatus               @default(ACTIVE)
  color             String?                     // Hex color for UI
  modules           Json?                       // Configuration des modules activés { products: true, blog: true, media: true }
  ownerId           String
  startDate         DateTime?
  endDate           DateTime?
  budget            Float?
  owner             User                        @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  products          Product[]
  blogPosts         BlogPost[]
  media             Media[]
  
  // Définitions des modules IA
  moduleDefinitions ProjectModuleDefinition[]
  installedModules  ProjectInstalledModule[]   @relation("InstalledModules")
  
  createdAt         DateTime                    @default(now())
  updatedAt         DateTime                    @updatedAt

  @@index([ownerId])
  @@index([status])
}

// Définitions des modules générés par IA
model ProjectModuleDefinition {
  id              String   @id @default(cuid())
  projectId       String
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Identité du module
  moduleName      String   // PascalCase: "Produit", "Commande", etc.
  displayName     String?  // Nom affiché: "Gestion des Produits"
  description     String?  // Description du module
  
  // Schéma généré
  schema          Json     // Schéma Prisma au format JSON
  routes          Json?    // Routes disponibles: { GET: true, POST: true, ... }
  validations     Json?    // Règles de validation par champ
  relationships   Json?    // Relations vers d'autres modules
  indexes         String[] // Indexes Prisma générés
  
  // Métadonnées IA
  generatedBy     String?  // "openrouter", "anthropic", "fallback"
  aiModel         String?  // Modèle IA utilisé
  aiPrompt        String?  // Prompt original (pour traçabilité)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  installedIn     ProjectInstalledModule[]
  
  // Contrainte d'unicité: un module par nom par projet
  @@unique([projectId, moduleName])
  @@index([projectId])
}

// Modules installés dans un projet
model ProjectInstalledModule {
  id            String   @id @default(cuid())
  projectId     String
  project       Project  @relation("InstalledModules", fields: [projectId], references: [id], onDelete: Cascade)
  
  moduleId      String
  module        ProjectModuleDefinition @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  // Configuration du module
  enabled       Boolean  @default(true)
  customConfig  Json?    // Configuration personnalisée (options par module)
  
  createdAt     DateTime @default(now())
  installedAt   DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Contrainte d'unicité: un module installé une seule fois par projet
  @@unique([projectId, moduleId])
  @@index([projectId])
  @@index([moduleId])
}

enum ProjectType {
  ECOMMERCE
  BLOG
  PORTFOLIO
  LANDING
  CUSTOM
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  DRAFT
}

// ============================================
// SHUFFLE LIFE - Activity Discovery Models
// ============================================

// User preferences for activity discovery
model UserPreference {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Geolocation settings
  latitude         Float?
  longitude        Float?
  lastLocationUpdate DateTime?
  
  // Discovery settings
  defaultRadius    Int      @default(50) // km
  preferredTypes   String[] // restaurant, park, museum, etc.
  minRating        Float    @default(3.5)
  
  // Notifications
  notifyNewActivities Boolean @default(true)
  notificationRadius Int      @default(50)
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@index([userId])
}

// Activity discovery history
model UserActivity {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Search parameters
  type        String   // "discovery", "search", "view"
  latitude    Float
  longitude   Float
  radius      Int      // km
  
  // Results
  resultCount Int      @default(0)
  metadata    Json?    // Additional data
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

// Favorite activities saved by users
model FavoriteActivity {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Activity data
  placeId   String   // From Google Maps or external source
  name      String
  latitude  Float
  longitude Float
  type      String   // restaurant, park, museum, etc.
  rating    Float?
  address   String?
  
  // Personal notes
  notes     String?
  visited   Boolean  @default(false)
  rating_   Float?   // User's personal rating
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, placeId])
  @@index([userId])
  @@index([visited])
}

// Subscription tiers for Shuffle Life
model ShuffleLifeSubscription {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation("ShuffleLifeSub", fields: [userId], references: [id], onDelete: Cascade)
  
  tier         String   @default("FREE") // FREE, PRO, PLUS
  maxRadius    Int      @default(50) // km limit
  
  // Billing
  status       String   @default("active") // active, canceled, past_due
  stripeId     String?  @unique // Stripe customer ID
  currentPeriodEnd DateTime?
  
  features     Json? // Custom features for tier
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([userId])
  @@index([tier])
}

