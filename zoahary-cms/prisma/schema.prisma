generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String     @id @default(cuid())
  name                 String?
  email                String     @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  role                 Role       @default(USER)
  twoFactorSecret      String?
  twoFactorEnabled     Boolean    @default(false)
  twoFactorBackupCodes String[]   @default([])
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  accounts             Account[]
  blogPosts            BlogPost[]
  products             Product[]
  sessions             Session[]
  media                Media[]
  revisions            BlogPostRevision[]
}

model Media {
  id          String   @id @default(cuid())
  filename    String
  url         String
  publicId    String
  type        String
  mimeType    String
  size        Int
  width       Int?
  height      Int?
  alt         String?
  title       String?
  description String?
  tags        String[] @default([])
  folder      String?
  uploadedBy  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  uploader    User     @relation(fields: [uploadedBy], references: [id])

  @@index([type])
  @@index([tags])
  @@index([uploadedBy])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id            String   @id @default(cuid())
  slug          String   @unique
  price         Float
  images        String[]
  category      String
  inStock       Boolean  @default(true)
  featured      Boolean  @default(false)
  authorId      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  comingSoon    Boolean  @default(false)
  isNew         Boolean  @default(false)
  titleFr       String
  titleEn       String
  descriptionFr String
  descriptionEn String
  slugEn        String?
  author        User     @relation(fields: [authorId], references: [id])

  @@index([slug])
  @@index([category])
}

model BlogPost {
  id             String    @id @default(cuid())
  title          String
  slug           String    @unique
  content        String
  excerpt        String?
  coverImage     String?
  published      Boolean   @default(false)
  tags           String[]
  authorId       String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  publishedAt    DateTime?
  lang           String    @default("FR")
  translationKey String?
  author         User      @relation(fields: [authorId], references: [id])

  @@index([slug])
  @@index([published])
  @@index([lang])
  @@index([translationKey])
  revisions      BlogPostRevision[]
}

model BlogPostRevision {
  id          String   @id @default(cuid())
  postId      String
  title       String
  content     String
  excerpt     String?
  coverImage  String?
  tags        String[]
  authorId    String
  createdAt   DateTime @default(now())
  
  post        BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  author      User     @relation(fields: [authorId], references: [id])

  @@index([postId])
  @@index([createdAt])
}

model PricingRule {
  id          String                @id @default(cuid())
  name        String                // Nom descriptif: "Réduction Tuléar", "Promo Noël"
  geoCities   String[]              // ["Tuléar", "Toliara"]
  geoRegions  String[]              // ["Atsimo-Andrefana"]
  startDate   DateTime?             // Date de début (optionnel = toujours actif)
  endDate     DateTime?             // Date de fin (optionnel = toujours actif)
  priority    Int                   // 1 = haute priorité, 10 = basse
  enabled     Boolean               @default(true)
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  products    PricingRuleProduct[]

  @@index([enabled])
}

model PricingRuleProduct {
  id            String      @id @default(cuid())
  pricingRuleId String
  productId     String
  discountType  String      // "FIXED" | "PERCENT"
  discountValue Int         // Montant en Ar (ex: 7000) ou pourcentage (ex: 15)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  pricingRule   PricingRule @relation(fields: [pricingRuleId], references: [id], onDelete: Cascade)

  @@unique([pricingRuleId, productId])
  @@index([productId])
}

model ExchangeRate {
  id           String   @id @default(cuid())
  fromCurrency String   // EUR, USD
  toCurrency   String   // EUR, USD
  rate         Float    // Exchange rate
  source       String   @default("API") // API, MANUAL
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([fromCurrency, toCurrency, createdAt])
  @@index([fromCurrency, toCurrency])
  @@index([createdAt])
}

enum Role {
  USER
  ADMIN
  EDITOR
  SUPER_ADMIN
}

model SecurityLog {
  id        String   @id @default(cuid())
  type      String   // RATE_LIMIT, AUTH_FAILURE, ACCESS_DENIED
  message   String
  ip        String?
  endpoint  String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
  @@index([ip])
}

model BlockedIp {
  id        String   @id @default(cuid())
  ip        String   @unique
  reason    String?
  createdAt DateTime @default(now())
  expiresAt DateTime? // Optionnel : bannissement temporaire

  @@index([ip])
}

model Settings {
  id               String   @id @default(cuid())
  openRouterApiKey String?  // Clé API OpenRouter (chiffrée)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
